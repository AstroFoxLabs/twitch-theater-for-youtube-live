{
    "manifest_version": 3,
    "name": "Twitch Theater Mode for Youtube Live",
    "author": "SleepyEvoli",
    "version": "1.0",
    "description": "Make the Theater Mode similar to Twitch.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "css": ["theater.css"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "minimum_chrome_version": "128",
    "short_name": "YTTW-Theater"
  }
{
  "manifest_version": 3,
  "name": "Twitch Theater Layout for Youtube Live",
  "author": "AstroFoxLabs",
  "version": "1.3",
  "description": "Make the Theater Mode on Youtube similar to Twitch by changing its layout",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "theater.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-64.png",
    "128": "./icons/icon-128.png"
  },
  "minimum_chrome_version": "120",
  "short_name": "YTTW-Theater",
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-theater-for-youtube-id@sleepyevoli.com"
    }
  }
}
